document.write("<!DOCTYPE html>\r\n<html>\r\n<head>\r\n  <meta charset=\"UTF-8\">\r\n  <link rel='stylesheet' href='https:\/\/cdnjs.cloudflare.com\/ajax\/libs\/twitter-bootstrap\/3.3.7\/css\/bootstrap.min.css'>\r\n  <link rel=\"stylesheet\" href=\".\/style.css\">\r\n<\/head>\r\n<body>\r\n<div class=\"loading-overlay\">\r\n  <div class=\"loading-message\">\r\n    <h1>Chargement<\/h1>\r\n    <div class=\"progress-bar\">\r\n      <div class=\"progress-bar-fill\"><\/div>\r\n    <\/div>\r\n  <\/div>\r\n<\/div>\r\n\r\n<div id=\"content\" class=\"hidden\">\r\n  <!-- Contenu du site -->\r\n<\/div>\r\n\r\n<script>\r\n  function showContent() {\r\n    var loadingOverlay = document.querySelector('.loading-overlay');\r\n    var content = document.getElementById('content');\r\n    loadingOverlay.style.display = 'none';\r\n    content.classList.remove('hidden');\r\n  }\r\n\r\n  function getRandomDuration() {\r\n    \/\/ G\u00e9n\u00e8re une dur\u00e9e al\u00e9atoire entre 1 et 8 secondes\r\n    var minDuration = 1000; \/\/ 1 seconde\r\n    var maxDuration = 8000; \/\/ 8 secondes\r\n    return Math.floor(Math.random() * (maxDuration - minDuration + 1)) + minDuration;\r\n  }\r\n\r\n  function showLoading() {\r\n    var progressBar = document.querySelector('.progress-bar-fill');\r\n    var maxDuration = getRandomDuration();\r\n    var startTime = Date.now();\r\n\r\n    function updateProgressBar() {\r\n      var elapsedTime = Date.now() - startTime;\r\n      var progress = Math.min((elapsedTime \/ maxDuration) * 100, 100);\r\n      progressBar.style.width = progress + '%';\r\n\r\n      if (elapsedTime < maxDuration) {\r\n        requestAnimationFrame(updateProgressBar);\r\n      } else {\r\n        showContent();\r\n      }\r\n    }\r\n\r\n    requestAnimationFrame(updateProgressBar);\r\n  }\r\n\r\n  document.addEventListener('DOMContentLoaded', function() {\r\n    showLoading();\r\n  });\r\n<\/script>\r\n\r\n<style>\r\n  html, body {\r\n    height: 100%;\r\n    margin: 0;\r\n    padding: 0;\r\n    overflow: hidden;\r\n  }\r\n\r\n  .loading-overlay {\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    position: fixed;\r\n    top: 0;\r\n    right: 0;\r\n    bottom: 0;\r\n    left: 0;\r\n    background-color: #fff;\r\n    z-index: 9999;\r\n  }\r\n\r\n  .loading-message {\r\n    text-align: center;\r\n  }\r\n\r\n  .loading-message h1 {\r\n    font-size: 30px;\r\n    font-weight: bold;\r\n  }\r\n\r\n  .progress-bar {\r\n    width: 200px;\r\n    height: 10px;\r\n    background-color: #eee;\r\n    margin-top: 20px;\r\n  }\r\n\r\n  .progress-bar-fill {\r\n    height: 100%;\r\n    background-color: #2196F3;\r\n    width: 0;\r\n    transition: width 0.3s;\r\n  }\r\n\r\n  #content.hidden {\r\n    display: none;\r\n  }\r\n<\/style>\r\n<\/body>\r\n<\/html>");
